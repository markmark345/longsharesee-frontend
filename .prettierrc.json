{
	"printWidth": 80,
	"arrowParens": "always",
	"singleQuote": true,
	"semi": false,
	"bracketSameLine": false,
	"trailingComma": "all",
	"useTabs": true,
	"endOfLine": "auto",
	"importOrder": [
		"^@core/(.*)$",
		"<THIRD_PARTY_MODULES>",
		"^@server/(.*)$",
		"^@ui/(.*)$",
		"^[./]"
	],
	"importOrderSeparation": true,
	"importOrderSortSpecifiers": true,
	"plugins": [
		"prettier-plugin-tailwindcss",
		"@trivago/prettier-plugin-sort-imports"
	]
}
